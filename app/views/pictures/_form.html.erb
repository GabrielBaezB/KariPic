<div class="container">
  <%= form_with(model: picture) do |form| %>
    <% if picture.errors.any? %>
      <div style="color: red">
        <h2>
          <%= pluralize(picture.errors.count, "error" ) %> prohibited this picture from being saved:
        </h2>
        <ul>
          <% picture.errors.each do |error| %>
            <li>
              <%= error.full_message %>
            </li>
            <% end %>
        </ul>
      </div>
      <% end %>

        <div class="form-group">
          <%= form.label :name, style: "display: block" %>
            <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :images %>
            <%= form.file_field :images, multiple: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :caption, style: "display: block" %>
            <%= form.text_field :caption %>
        </div>

        <div class="form-group">
          <%= form.label :feelings, style: "display: block" %>
            <%= form.text_field :feelings %>
        </div>

        <div class="form-group">
          <%= form.submit %>
        </div>
        <% end %>
</div>